{
  "manifest_version": 3,
  "name": "Text Fly Translator",
  "version": "1.0.0",
  "description": "Translate Text From Any Language to Any Language With SidePanel Feature",

  "permissions": ["sidePanel", "activeTab"],
  "icons": {
    "16": "./imgs/onTheFly.png"
  },
  "side_panel": {
    "default_path": "popup.html"
  },

  "action": {
    "default_title": "Open Text Selector"
  },

  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["config.js", "popup.js", "content.js"]
    }
  ]
}
